{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Payment",
    "description": "Credit card data",
    "type": "object",
    "properties": {
        "card_number": {
            "description": "Card number",
            "type": "integer"
        },
        "cvv": {
            "description": "CVV code",
            "type": "integer"
        },
        "expiration_date": {
            "description": "Expiration date",
            "type": "string"
        }
    },
    "required": ["card_number", "cvv", "expiration_date"]
}